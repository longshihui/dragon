{
  "name": "dragon",
  "private": true,
  "version": "1.0.0",
  "description": "一条龙服务",
  "workspaces": [
    "core/*",
    "modules/*",
    "runners/*"
  ],
  "scripts": {
    "dev": "dragon-cli dev",
    "build": "dragon-cli build",
    "release": "dragon-cli release",
    "package": "yarn build && electron-builder build --publish never",
    "package-all": "yarn build && electron-builder build -mw",
    "package-win": "yarn build && electron-builder build --win --x64",
    "package-mac": "yarn build && electron-builder build --mac",
    "prestart": "yarn build",
    "start": "cross-env NODE_ENV=production electron ./dist/main.js",
    "prettier": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,scss,css}\"",
    "lint": "eslint --fix './src/**/*.{js,jsx,ts,tsx}'",
    "create-icon": "electron-icon-builder --input=./public/logo.png --output=./public/app-icon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/longshihui/dragon.git"
  },
  "author": "longshihui",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/longshihui/dragon/issues"
  },
  "homepage": "https://github.com/longshihui/dragon#readme",
  "devDependencies": {
    "@hot-loader/react-dom": "^16.11.0",
    "@types/conventional-changelog": "^3.1.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/lodash": "^4.14.149",
    "@types/lowdb": "^1.0.9",
    "@types/node": "12",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^5.1.3",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.1.0",
    "@types/webpack": "^4.41.10",
    "@types/webpack-dev-server": "^3.1.6",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "commitizen": "^4.0.3",
    "conventional-changelog": "^3.1.18",
    "electron": "^8.2.4",
    "electron-builder": "^22.4.1",
    "electron-devtools-installer": "^3.0.0",
    "electron-icon-builder": "^1.0.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "file-loader": "^6.0.0",
    "husky": "^4.2.3",
    "inquirer": "^7.1.0",
    "lint-staged": "^10.1.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^2.0.2"
  },
  "dependencies": {
    "@ant-design/icons": "^4.0.6",
    "antd": "^4.1.3",
    "async-validator": "^3.2.4",
    "connected-react-router": "^6.3.2",
    "core-js": "3.6.4",
    "debug": "^4.3.1",
    "devtron": "^1.4.0",
    "electron-debug": "^3.0.1",
    "electron-log": "^4.0.1",
    "electron-updater": "^4.2.0",
    "history": "^4.9.0",
    "lodash": "^4.17.21",
    "lowdb": "^1.0.0",
    "moment": "^2.24.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.18",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "source-map-support": "^0.5.11",
    "typeface-roboto": "^0.0.75"
  },
  "browserslist": [
    "electron 1.6"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}