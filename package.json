{
  "name": "dragon",
  "private": true,
  "version": "1.0.0",
  "description": "一条龙服务",
  "workspaces": [
    "core/*",
    "modules/*",
    "runners/*",
    "develop/*"
  ],
  "scripts": {
    "dev": "dragon-cli dev",
    "build": "dragon-cli build",
    "release": "dragon-cli release",
    "create-icon": "electron-icon-builder --input=./public/logo.png --output=./public/app-icon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/longshihui/dragon.git"
  },
  "author": "longshihui",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/longshihui/dragon/issues"
  },
  "homepage": "https://github.com/longshihui/dragon#readme",
  "devDependencies": {
    "commitizen": "^4.0.3",
    "conventional-changelog": "^3.1.18",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^4.2.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2"
  },
  "browserslist": [
    "electron 1.6"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}