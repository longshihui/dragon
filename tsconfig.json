{
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "dist",
        "module": "NodeNext",
        "target": "ESNext",
        "sourceMap": true,
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "dragon-core/*/src/**/*",
        "dragon-lib/*/src/**/*",
        "dragon-modules/*/backend/**/*",
        "dragon-modules/*/front/**/*",
        "types/**/*",
        "**/types/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}