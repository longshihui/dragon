{
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "module": "ESNext",
        "target": "ESNext",
        "sourceMap": true,
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "dragon-core/**/*",
        "dragon-modules/**/*",
        "dragon-lib/**/*",
        "types/**/*",
    ]
}